<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="692.0" prefWidth="874.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wellnesstracker.ExerciseLogController">
    <children>
        <!-- Title -->
        <Label alignment="CENTER" layoutX="20.0" layoutY="28.0" prefHeight="40.0" prefWidth="808.0" text="EXERCISE LOG">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <!-- Exercise Name -->
        <Label layoutX="86.0" layoutY="82.0" prefHeight="40.0" prefWidth="150.0" text="Exercise Name:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtExerciseName" layoutX="87.0" layoutY="122.0" prefHeight="40.0" prefWidth="636.0" promptText="Enter exercise name">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </TextField>
        <!-- Duration -->
        <Label layoutX="86.0" layoutY="171.0" prefHeight="40.0" prefWidth="150.0" text="Duration (minutes):">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtDuration" layoutX="87.0" layoutY="211.0" prefHeight="40.0" prefWidth="636.0" promptText="Enter duration in minutes">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </TextField>
        <!-- Calories Burned -->
        <Label layoutX="86.0" layoutY="261.0" prefHeight="40.0" prefWidth="150.0" text="Calories Burned:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtCaloriesBurned" layoutX="87.0" layoutY="301.0" prefHeight="40.0" prefWidth="636.0" promptText="Enter calories burned">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </TextField>
        <!-- Date -->
        <Label layoutX="86.0" layoutY="351.0" prefHeight="40.0" prefWidth="150.0" text="Exercise Date:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <DatePicker fx:id="datePicker" layoutX="87.0" layoutY="391.0" prefWidth="200.0" />
        <!-- Comments -->
        <Label layoutX="86.0" layoutY="441.0" prefHeight="40.0" prefWidth="150.0" text="Comments:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextArea fx:id="txtComments" layoutX="87.0" layoutY="481.0" prefHeight="80.0" prefWidth="636.0" promptText="Add any additional notes">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </TextArea>
        <!-- Add Button -->
        <Button layoutX="271.0" layoutY="600.0" mnemonicParsing="false" onAction="#handleAddExercise" prefHeight="40.0" prefWidth="218.0" text="Save Exercise">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
