<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="692.0" prefWidth="874.0" styleClass="mainFxmlClass" stylesheets="@dietaryintake.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wellnesstracker.DietaryIntakeController">
    <children>
        <!-- Title -->
        <Label alignment="CENTER" layoutX="20.0" layoutY="28.0" prefHeight="40.0" prefWidth="808.0" text="DIETARY INTAKE TRACKER">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <!-- Food Name -->
        <Label layoutX="86.0" layoutY="82.0" prefHeight="40.0" prefWidth="122.0" text="Food Name:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtFoodName" layoutX="86.0" layoutY="122.0" prefHeight="40.0" prefWidth="636.0" promptText="Enter food name here">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </TextField>
        <!-- Calories -->
        <Label layoutX="86.0" layoutY="171.0" prefHeight="40.0" prefWidth="150.0" text="Calories (kcal):">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtCalories" layoutX="87.0" layoutY="211.0" prefHeight="40.0" prefWidth="636.0" promptText="Enter calories here">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </TextField>
        <!-- Protein -->
        <Label layoutX="86.0" layoutY="261.0" prefHeight="40.0" prefWidth="150.0" text="Protein (g):">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtProtein" layoutX="87.0" layoutY="301.0" prefHeight="40.0" prefWidth="636.0" promptText="Enter protein content">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </TextField>
        <!-- Carbs -->
        <Label layoutX="86.0" layoutY="351.0" prefHeight="40.0" prefWidth="150.0" text="Carbs (g):">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtCarbs" layoutX="87.0" layoutY="391.0" prefHeight="40.0" prefWidth="636.0" promptText="Enter carbs content">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </TextField>
        <!-- Fats -->
        <Label layoutX="86.0" layoutY="441.0" prefHeight="40.0" prefWidth="150.0" text="Fats (g):">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtFats" layoutX="87.0" layoutY="481.0" prefHeight="40.0" prefWidth="636.0" promptText="Enter fats content">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </TextField>
      
        <!-- Add Button -->
      <Button layoutX="271.0" layoutY="560.0" mnemonicParsing="false" onAction="#saveAddFood" prefHeight="40.0" prefWidth="218.0" text="Add Food">
    <font>
        <Font name="System Bold" size="16.0" />
    </font>
    </Button>
    </children>
</AnchorPane>
