<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="540.0" prefWidth="633.0" stylesheets="@moodtracker.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wellnesstracker.MoodTrackerController">
    <children>
        <Label alignment="CENTER" layoutX="128.0" layoutY="33.0" prefHeight="46.0" prefWidth="343.0" stylesheets="@moodtracker.css" text="MoodTracker">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <Label alignment="CENTER" layoutX="164.0" layoutY="94.0" prefHeight="46.0" prefWidth="271.0" stylesheets="@moodtracker.css" text="How do you feel today?">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <ComboBox fx:id="moodComboBox" layoutX="160.0" layoutY="150.0" prefWidth="200.0" promptText="Select your mood" stylesheets="@moodtracker.css" />
        <Label alignment="CENTER" layoutX="163.0" layoutY="212.0" prefHeight="39.0" prefWidth="271.0" stylesheets="@moodtracker.css" text="Comment:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextArea fx:id="commentTextArea" layoutX="121.0" layoutY="280.0" prefHeight="200.0" prefWidth="437.0" promptText="Share your thoughts here..." stylesheets="@moodtracker.css">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </TextArea>
        <Button layoutX="273.0" layoutY="500.0" mnemonicParsing="false" onAction="#handleSaveMood" stylesheets="@moodtracker.css" text="Save">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
