<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="692.0" prefWidth="874.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wellnesstracker.PersonalInfoController">
    <stylesheets>
        <URL value="@personalinfo.css" />
    </stylesheets>
    <children>
        <!-- Title -->
        <Label alignment="CENTER" layoutX="20.0" layoutY="28.0" prefHeight="40.0" prefWidth="808.0" text="WELCOME TO WELLNESS TRACKER FOR STUDENTS">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <!-- Full Name Field -->
        <Label layoutX="86.0" layoutY="82.0" prefHeight="40.0" prefWidth="122.0" text="Name:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtFullName" layoutX="86.0" layoutY="122.0" prefHeight="40.0" prefWidth="636.0" promptText="How can we call you?">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </TextField>
        <!-- Email Field -->
        <Label layoutX="86.0" layoutY="171.0" prefHeight="40.0" prefWidth="150.0" text="Email:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtEmail" layoutX="87.0" layoutY="211.0" prefHeight="40.0" prefWidth="636.0" promptText="Enter your email so we can reach out to you.">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </TextField>
        <!-- Password Field -->
        <Label layoutX="87.0" layoutY="261.0" prefHeight="40.0" prefWidth="158.0" text="Password:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <PasswordField fx:id="txtPassword" layoutX="87.0" layoutY="307.0" prefHeight="40.0" prefWidth="636.0" promptText="Enter your password." />
        <!-- Age Field -->
        <Label layoutX="87.0" layoutY="362.0" prefHeight="31.0" prefWidth="91.0" text="Age:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="txtAge" layoutX="87.0" layoutY="393.0" prefHeight="40.0" prefWidth="636.0" promptText="Enter your age, this is not for judging.">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </TextField>
        <!-- Gender ComboBox -->
        <Label layoutX="87.0" layoutY="446.0" prefHeight="40.0" prefWidth="91.0" text="Gender:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <ComboBox fx:id="cbGender" layoutX="86.0" layoutY="486.0" prefWidth="150.0" />
        <!-- Save Button -->
        <Button layoutX="271.0" layoutY="560.0" mnemonicParsing="false" onAction="#handleSaveUser" prefHeight="40.0" prefWidth="218.0" text="Let's go!">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
